{{#if tag}}
  <a href="#" {{action "expand"}} class="badge-category restricted" {{bind-attr style="badgeStyle"}}>
    {{tag}}
  </a>
{{else}}
  <a href="#" {{action "expand"}} class="badge-category home" {{bind-attr style="badgeStyle"}}>
    all tags
  </a>
{{/if}}

<a href="#" {{action "expand"}} class="badge-category category-dropdown-button home" {{bind-attr style="badgeStyle"}}><i {{bind-attr class="iconClass"}}></i></a>
<section {{bind-attr class="expanded::hidden :category-dropdown-menu"}} class='chooser'>
  <div class="cat">
    <a href="/tag" data-drop-close="true" class="badge-category home">
      all tags
    </a>
  </div>

  {{#each tags}}
    <div class="cat">
      {{tag-link this}}
    </div>
  {{/each}}
</section>
